<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/Padding.Standard"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/view_three_item_list_view_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/TextSize.Large"
        android:text="Left"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/view_three_item_list_view_right_text_view"
        android:textColor="@android:color/primary_text_light"/>

    <TextView
        android:id="@+id/view_three_item_list_view_middle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/TextSize.Large"
        android:text="Middle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_three_item_list_view_left_text_view"
        android:textColor="@android:color/tertiary_text_light"/>

    <TextView
        android:id="@+id/view_three_item_list_view_right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/TextSize.Standard"
        android:layout_above="@id/view_three_item_list_view_middle_text_view"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/Padding.Standard"
        android:text="Right"
        android:textColor="@android:color/tertiary_text_light"/>
Â®
</RelativeLayout>